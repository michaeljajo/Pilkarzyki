{
  "framework": "nextjs",
  "regions": ["fra1"],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "src/app/**": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/complete-gameweeks",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/apply-default-lineups",
      "schedule": "0 1 * * *"
    }
  ]
}