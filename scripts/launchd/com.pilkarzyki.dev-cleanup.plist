<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.pilkarzyki.dev-cleanup</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>REPLACE_WITH_PROJECT_DIR/scripts/emergency-cleanup.sh</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>REPLACE_WITH_PROJECT_DIR/.dev-server/logs/launchd-cleanup.log</string>

    <key>StandardErrorPath</key>
    <string>REPLACE_WITH_PROJECT_DIR/.dev-server/logs/launchd-cleanup-error.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>

    <key>WorkingDirectory</key>
    <string>REPLACE_WITH_PROJECT_DIR</string>

    <!-- Run on system boot to cleanup stale processes from crashes/hard shutdowns -->
    <key>UserName</key>
    <string>REPLACE_WITH_USERNAME</string>

    <key>KeepAlive</key>
    <false/>
</dict>
</plist>
